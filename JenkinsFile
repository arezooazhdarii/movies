pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Executed'
            }
        }
        stage('clean') {
            steps {
                sh 'mvn clean'
            }
        }
        stage('compite') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('package') {
            steps {
                sh 'mvn package'
            }
            post{
                success {
                    archiveArtifacts artifacts: 'target/*.jar', followSymlinks: false
                }
            }
        }

        stage('deploy') {
            steps {
                sh 'java -jar target/movies-0.0.1-SNAPSHOT.jar'
            }
        }

    }
}
